{

  "manifest_version": 2,
  "name": "block-utm",
  "version": "1.0",

  "description": "Rewrite urls to remove utm tracking",

  "icons": {
      "48": "icons/utm-blocker-48.png"
    },

  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage",
    "<all_urls>"
  ],

  "browser_action": {
    "browser_style": false,
    "default_icon": "icons/utm-blocker-32.png",
    "default_title": "Utm Blocker",
    "default_popup": "popup/popup.html"
  },

  "background": {
    "scripts": ["background/background.js"]
  }

}
